# MedRoundTable 生产环境配置

# Second Me OAuth 配置
SECONDME_CLIENT_ID=your_client_id_here
SECONDME_CLIENT_SECRET=your_client_secret_here
SECONDME_REDIRECT_URI=https://your-domain.com/api/auth/callback

# API Base URL
API_BASE_URL=https://api.mindverse.com/gate/lab

# 数据库配置
DATABASE_URL=sqlite:///app/data/medroundtable.db
DB_POOL_SIZE=5
DB_POOL_RECYCLE=3600

# 安全配置
SECRET_KEY=your_random_secret_key_change_this
DEBUG=false

# Flask配置
FLASK_APP=backend/main.py
FLASK_ENV=production

# 日志配置
LOG_DIR=/app/logs
LOG_LEVEL=INFO

# ChromaDB配置
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# 模型配置
DEFAULT_MODEL=glm-5
OPENAI_API_KEY=your_openai_key_if_needed

# 邮箱配置（用于通知）
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
UPLOAD_FOLDER=./uploads

# 缓存配置
REDIS_URL=redis://localhost:6379/0

# 监控配置
ENABLE_MONITORING=true
METRICS_PORT=9090
